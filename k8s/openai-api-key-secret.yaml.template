# Template for OpenAI API key secret
# Replace <your-openai-api-key> with your actual OpenAI API key
#
# To create this secret:
# kubectl create secret generic openai-api-key \
#   --from-literal=OPENAI_API_KEY="your-actual-openai-api-key-here" \
#   --namespace=experimental

apiVersion: v1
kind: Secret
metadata:
  name: openai-api-key
  namespace: experimental
type: Opaque
data:
  # Base64 encoded OpenAI API key
  # To encode: echo -n "your-openai-api-key-here" | base64
  OPENAI_API_KEY: <base64-encoded-openai-api-key>

